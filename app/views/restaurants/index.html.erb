<% if @restaurants.any? %>
<ul>
  <% @restaurants.each do |restaurant| %>
  <li>
    <h2><%= link_to "#{restaurant.name}", restaurant_path(restaurant) %></h2>
    
    
    <% if current_user == restaurant.user %>

      <h2><%= link_to content_tag(:i, nil, :class => "fa fa-pencil"), edit_restaurant_path(restaurant), :id => 'edit-restaurant' %></h2>
      <h2 ><%= link_to content_tag(:i, nil, :class => "fa fa-trash"), restaurant_path(restaurant), method: :delete, id: 'delete-restaurant' %></h2>
    
    <% end %>

    <h2><%= link_to "Review #{restaurant.name}", new_restaurant_reviews_path(restaurant) %></h2>

    <% if restaurant.reviews.any? %>
      <ul> 
        <% restaurant.reviews.each do |review|%>
          <% if current_user == review.user %>
            <li><%= "#{review.thoughts} #{review.rating}" %>
            <h2><%= link_to content_tag(:i, nil, :class => "fa fa-trash"), restaurant_reviews_path(restaurant), method: :delete, id: 'delete-review' %></h2>
            </li>
          <% else %>
            <li><%= "#{review.thoughts} #{review.rating}" %></li>
          <% end %>
        <% end %>
      </ul>  
    <% end %>
    
  </li>  
  <% end %>
</ul>  
<% else %>
  No restaurants
<% end %>
<a href="/restaurants/new">Add a restaurant</a>