<% if @restaurants.any? %>
<ul>
  <% @restaurants.each do |restaurant| %>
  <li>
    <h2>
      <%= link_to "#{restaurant.name}", restaurant_path(restaurant) %> 
      Average rating: <%= star_rating(restaurant.average_rating) %>
    </h2>
    
    
    <% if current_user == restaurant.user %>
      <h2><%= link_to content_tag(:i, nil, :class => "fa fa-pencil"), edit_restaurant_path(restaurant), :id => 'edit-restaurant' %></h2>
      <h2 ><%= link_to content_tag(:i, nil, :class => "fa fa-trash"), restaurant_path(restaurant), method: :delete, id: 'delete-restaurant' %></h2>
    <% end %>

    <h2><%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant) %></h2>

    <% if restaurant.reviews.any? %>
      <ul> 
        <% restaurant.reviews.each do |review|%>
          <li>

            <% if current_user == review.user %>
              <p><%= "#{review.thoughts} #{review.rating}" %></p>
              <h2><%= link_to content_tag(:i, nil, :class => "fa fa-trash"), review_path(review), method: :delete, id: 'delete-review' %></h2>
            <% else %>
              <%= "#{review.thoughts} #{review.rating}" %>
            <% end %>

            <p>
              <a class="endorsements-count"><%= review.endorsements.count %></a>
              <a>endorsements</a>
              <%= link_to content_tag(:i, nil, :class => "fa fa-thumbs-o-up fa-2x"), review_endorsements_path(review), id: "endorsement-up-#{restaurant.name}" %>
              <%= link_to content_tag(:i, nil, :class => "fa fa-thumbs-o-down fa-2x"), review_endorsements_path(review), id: "endorsement-down-#{restaurant.name}" %>
            </p>
          </li>
        <% end %>
      </ul>  
    <% end %>
    
  </li>
  <% end %>
</ul>  
<% else %>
  No restaurants
<% end %>
<a href="/restaurants/new">Add a restaurant</a>